<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
		<tab id="cibler" translate="label" sortOrder="10">
			<label>Cibler</label>
		</tab>
		<section id="cshop" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
			<class>separator-top</class>
			<label>Cibler API</label>
			<tab>cibler</tab>
			<resource>Cibler_Shop::shop_config</resource>
			<group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
				<label>General Configuration</label>
				<field id="customerid" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
          			<label>Customer ID</label>
          			<comment>The Customer ID.</comment>
        		</field>
        		<field id="keyapi" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
		        	<label>KEY API</label>
		         	<comment>Add your Key api here.</comment>
        		</field>
        		<field id="envurl" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
          			<label>ENV URL</label>
          			<comment>Environment URL.</comment>
        		</field>
			</group>
		</section>
	</system>
</config>
